varnishtest "Test cowsay header"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import cowsay from "${vmod_topbuild}/src/.libs/libvmod_cowsay.so";
	sub vcl_recv {
	    if (req.url ~ "/gimmethecow") {
	       	set req.http.x-cow = cowsay.cowsay_header();
	    	}
	}

	sub vcl_deliver {
	    	set resp.http.x-cow = req.http.x-cow;
	}
} -start

client c1 {
	txreq -url "/gimmethecow"
	rxresp
} -run
